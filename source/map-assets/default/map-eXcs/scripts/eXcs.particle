eXcs/firework_red
{
	ejector
	{
		particle
		{
		shader sync textures/eXcs/burst_red_s
		displacement 0 0 0 ~5

		velocityType		static
	
		velocityDir			linear
	
		velocityMagnitude		700
		velocity			0 0 1 ~10

		accelerationType		static
		accelerationDir		linear
		acceleration		0 0 -1 ~35
		accelerationMagnitude	500

		radius		100 2 22
		alpha			250 0 1
		rotation		0 ~360 ~360
		bounce		0.0

		lifeTime 1200

		overdrawProtection
		}

		particle
		{
		shader sync textures/eXcs/burst_red_s
		displacement 0 0 0 ~5

		velocityType		static
	
		velocityDir			linear
	
		velocityMagnitude		750
		velocity			0 0 1 ~10

		accelerationType		static
		accelerationDir		linear
		acceleration		0 0 -1 ~35
		accelerationMagnitude	500

		radius		100 2 22
		alpha			450 0 1
		rotation		0 ~360 ~360
		bounce		0.0

		lifeTime 1300

		overdrawProtection
		}

		particle
		{
		shader sync textures/eXcs/burst_red_s
		displacement 0 0 0 ~5

		velocityType		static
	
		velocityDir			linear
	
		velocityMagnitude		600
		velocity			0 0 1 ~10

		accelerationType		static
		accelerationDir		linear
		acceleration		0 0 -1 ~35
		accelerationMagnitude	500

		radius		100 2 22
		alpha			250 0 1
		rotation		0 ~360 ~360
		bounce		0.0

		lifeTime 1400

		overdrawProtection
		}

		particle
		{
		shader sync textures/eXcs/burst_red_s
		displacement 0 0 0 ~5

		velocityType		static
	
		velocityDir			linear
	
		velocityMagnitude		650
		velocity			0 0 1 ~10

		accelerationType		static
		accelerationDir		linear
		acceleration		0 0 -1 ~35
		accelerationMagnitude	500

		radius		100 2 22
		alpha			450 0 1
		rotation		0 ~360 ~360
		bounce		0.0

		lifeTime 1500

		overdrawProtection
		}
	count infinite
	delay 0
	period 1 - ~0%
	}

	ejector
	{
		particle
		{
		dynamiclight 0 1000 0 { 1 0.5 0.5 }
		lifeTime 1000
		}
	count 1
	delay 0
	period 1 - ~0%
	}
}


