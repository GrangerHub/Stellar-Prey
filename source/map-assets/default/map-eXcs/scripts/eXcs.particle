// original steam particle system, from karith
// steam by jex - edited by godmil
eXcs/steam
{
  ejector
  {
    particle
    {
      shader sync textures/eXcs/steam_s
      displacement 0 -8 0 0

      velocityType		static
      velocityDir		linear
      velocityMagnitude	150
      velocity		0 -1 0 ~20

      accelerationType	static
      accelerationDir		linear
      acceleration		0 0 1 ~5
      accelerationMagnitude	25

      radius		0 5 50
      alpha		250 .5 0
      rotation	0 ~360 ~360
      bounce		0.0

      lifeTime 1000
    }

    count infinite
    delay 0
    period 45 - ~0%
  }
}